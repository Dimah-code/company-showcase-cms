
@{
    ViewBag.Title = "PagesList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">
                ویرایش توضیحات و کلمات کلیدی سابت
            </h5>

            <!-- Table with hoverable rows -->
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">نام صفحه</th>
                        <th scope="col">تایتل صفحه</th>
                        <th scope="col">عملیات</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in ViewBag.pages)
                    {
                    <tr>
                        <td>@item.pageName</td>
                        <td>@item.pageTitle</td>
                        <td><a href="/Pages/EditPage/@item.pageID" class="btn btn-success">ویرایش</a></td>
                    </tr>
                    }

                </tbody>
            </table>
            <!-- End Table with hoverable rows -->

        </div>
    </div>

</div>