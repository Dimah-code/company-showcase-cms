@model PortoWeb.Models.GeneralViewModel
@{
    ViewBag.Title = "Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lang = ViewBag.lang;
    var text = PortoWeb.Models.LanguageTexts.Texts[lang];
}
<div role="main" class="main">
    @{
        Html.RenderAction("_SubBanner", "Component", new { id = 4 });
    }
    <div class="container py-4">

        <ul class="nav nav-pills sort-source sort-source-style-3 justify-content-center" data-sort-id="team" data-option-key="filter">
            <li class="nav-item" data-option-value="*"><a class="nav-link text-1 text-uppercase active" href="#">@text["Show all"]</a></li>
            @if (lang == "fa")
            {
                foreach (var item in Model.roles)
                {
                    <li class="nav-item" data-option-value=".@item.pkRole.Replace(" ", "-")"><a class="nav-link text-1 text-uppercase" href="#">@item.pkRole</a></li>
                }
            }
            else
            {
                foreach (var item in Model.roles)
                {
                    <li class="nav-item" data-option-value=".@item.pkRole.Replace(" ", "-")"><a class="nav-link text-1 text-uppercase" href="#">@item.roleDes</a></li>
                }
            }
        </ul>

        <div class="sort-destination-loader mt-4 pt-2 sort-destination-loader-loaded">
            <div class="row team-list sort-destination" data-sort-id="team" data-filter="*" style="position: relative; height: 1704px;">
                @foreach (var item in Model.team)
                {
                    <div class="col-12 col-sm-6 col-lg-3 isotope-item @item.pkRole.Replace(" ", "-")" style="position: absolute; right: 0px; top: 0px;">
                        <span class="thumb-info thumb-info-hide-wrapper-bg mb-4">
                            <span class="thumb-info-wrapper">
                                <a href="/Home/TeamDetail/@item.tID">
                                    <img src="~/assets/img/team/@item.tPhoto" class="img-fluid" alt="@item.tNameFamily">
                                    <span class="thumb-info-title">
                                        <span class="thumb-info-inner">@item.tNameFamily</span>
                                        <span class="thumb-info-type">@(item.lang == "fa" ? item.pkRole : item.roleDes)</span>
                                    </span>
                                </a>
                            </span>
                            <span class="thumb-info-caption">
                                <span class="thumb-info-caption-text">@item.tTitle</span>
                                <span class="thumb-info-social-icons mb-4">
                                    <a target="_blank" href="@item.tInstagram"><i class="fab fa-facebook-f"></i><span>فیسبوک</span></a>
                                    <a href="@item.tLinkedin"><i class="fab fa-linkedin-in"></i><span>لینکدین</span></a>
                                </span>
                            </span>
                        </span>
                    </div>
                }
            </div>

            <div class="bounce-loader"><div class="bounce1"></div><div class="bounce2"></div><div class="bounce3"></div></div>
        </div>

    </div>

    @{
        Html.RenderAction("_MessageToAdmin", "Component");
    }
</div>
@section HomeScripts{
   @Html.Partial("_SendMessageScript");
}
