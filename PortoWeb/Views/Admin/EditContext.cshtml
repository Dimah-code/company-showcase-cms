@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="text-center">
    <button onclick="setEdit(true)" class="btn btn-success">فعال سازی ویرایشگر</button>
    <button onclick="setEdit(false)" class="btn btn-danger">غیرفعال سازی ویرایشگر</button>
</div>
<iframe id="frame" src="/Home/Index" style="width:100%;height:100vh;"></iframe>
@section Scripts{
    <script>
        function setEdit(a) {
            $.post("/Admin/EditSession", { handle : a })
              .done(function (res) {
                  if (res) {
                      document.getElementById('frame').contentWindow.location.reload();
                  }
              });
        }
    </script>

}