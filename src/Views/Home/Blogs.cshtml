@model PortoWeb.Models.GeneralViewModel
@{
    ViewBag.Title = "Blogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lang = ViewBag.lang;
    var texts = PortoWeb.Models.LanguageTexts.Texts[lang];
}
<div role="main" class="main">
    @{
        Html.RenderAction("_SubBanner", "Component", new { id = 5 });
    }
    <div class="container py-4">

        <div class="row">
            <div class="col">
                <div class="blog-posts">

                    <div class="row">

                        @foreach (var item in Model.blogs)
                        {
                            <div class="col-md-6 col-lg-4 col-xl-3">
                                <article class="post post-medium border-0 pb-0 mb-5">
                                    <div class="post-image">
                                        <a href="/Home/BlogDetail/@item.bID">
                                            <img src="~/Assets/img/blog/@item.bMainPic" class="img-fluid img-thumbnail img-thumbnail-no-borders rounded-0" alt=" عکس بلاگ @item.bName">
                                        </a>
                                    </div>

                                    <div class="post-content">

                                        <h2 class="font-weight-semibold text-5 line-height-7 mt-3 mb-2 pt-1"><a href="blog-post.html">@item.bName</a></h2>
                                        <p>@item.bTitle</p>

                                        <div class="post-meta">
                                            <span><i class="far fa-user"></i>@texts["Writer"]: <a href="#">@item.tNameFamily</a> </span>
                                            <span><i class="far fa-folder"></i> <a href="#">@(ViewBag.lang == "fa" ? item.bcName : item.bcNameEn)</a></span>
                                            <span class="d-block mt-2 pt-1"><a href="/Home/BlogDetail/@item.bID" class="btn btn-xs btn-light text-1 text-uppercase">@texts["Read More"]</a></span>
                                        </div>

                                    </div>
                                </article>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>