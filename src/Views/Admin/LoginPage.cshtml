        <script>
            $(document).ready(function () {
                // Validation patterns
                const usernamePattern = /[A-Z]/; // At least one uppercase letter
                const passwordPattern = /.{8,}/; // At least 8 characters

                // Add event listeners for validation
                $('#yourUsername').on('input', function () {
                    const username = $(this).val().trim();
                    const msg = $('#username_validation_msg');

                    if (!usernamePattern.test(username)) {
                        msg.text("نام کاربری باید حداقل یک حرف بزرگ داشته باشد");
                    } else {
                        msg.text(""); // Clear message
                    }
                });

                $('#yourPassword').on('input', function () {
                    const password = $(this).val().trim();
                    const msg = $('#password_validation_msg');

                    if (!passwordPattern.test(password)) {
                        msg.text("رمز عبور باید حداقل 8 کاراکتر باشد");
                    } else {
                        msg.text(""); // Clear message
                    }
                });

                // Submit button click
                $('#submit_btn').on('click', function () {
                    showSpinner();
                    const username = $('#yourUsername').val().trim();
                    const password = $('#yourPassword').val().trim();
                    const usernameMsg = $('#username_validation_msg');
                    const passwordMsg = $('#password_validation_msg');

                    let isValid = true;

                    // Final validation check
                    if (!usernamePattern.test(username)) {
                        hideSpinner();
                        usernameMsg.text("نام کاربری باید حداقل یک حرف بزرگ داشته باشد");
                        isValid = false;
                    }

                    if (!passwordPattern.test(password)) {
                        hideSpinner();
                        passwordMsg.text("رمز عبور باید حداقل 8 کاراکتر باشد");
                        isValid = false;
                    }

                    if (!isValid) {
                        hideSpinner();
                        swal("خطا", "لطفا شرایط اعتبارسنجی را رعایت کنید", "error");
                        return;
                    }

                    // AJAX call if validation passes
                    $.ajax({
                        url: '/Admin/LoginCheck',
                        type: 'POST',
                        data: {
                            username: username,
                            password: password
                        },
                        success: function (response) {
                            if (response.success) {
                                window.location.href = "/Admin/Dashboard";
                                hideSpinner();
                            } else {
                                hideSpinner();
                                Swal.fire({
                                    icon: "error",
                                    title: "عملیات ناموفق",
                                    text: response.message,
                                    confirmButtonText: 'باشه'
                                });
                            }
                        },
                        error: function () {
                            hideSpinner();
                            Swal.fire({
                                icon: "error",
                                title: "خطا",
                                text: "مشکلی در سرور رخ داده است. لطفا دوباره تلاش کنید.",
                                confirmButtonText: 'باشه'
                            });
                        }
                    });
                });
            });

        </script>
