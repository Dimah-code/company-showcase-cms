@using PortoWeb.Models
@model GeneralViewModel
<!DOCTYPE html>
<html lang="@HttpContext.Current.Request.Cookies["lang"]?.Value ?? " en""
      dir="@(HttpContext.Current.Request.Cookies["lang"]?.Value == "fa" ? "rtl" : "ltr")">
<head>

    <!-- Basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>@Model.page.pageTitle</title>

    <meta name="keywords" content="@Model.page.pageKeywords">
    <meta name="description" content="@Model.page.pageDes">
    <meta name="author" content="HammyQ1">

    <!-- Favicon -->
    @if (Model != null && Model.siteinfo != null && !string.IsNullOrEmpty(Model.siteinfo.siteLogo))
    {
        <link rel="icon" href="~/assets/img/icons/@Model.siteinfo.siteLogo" />
    }
    else
    {
        <link rel="icon" href="~/favicon.ico" />
 <!-- Set a default favicon -->
    }
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">

    <!-- ~/assets/vendor CSS -->
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/vendor/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/assets/vendor/animate/animate.min.css">
    <link rel="stylesheet" href="~/assets/vendor/simple-line-icons/css/simple-line-icons.min.css">
    <link rel="stylesheet" href="~/assets/vendor/owl.carousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/vendor/owl.carousel/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/assets/vendor/magnific-popup/magnific-popup.min.css">

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/assets/css/theme.css">
    <link rel="stylesheet" href="~/assets/css/theme-elements.css">
    <link rel="stylesheet" href="~/assets/css/theme-blog.css">
    <link rel="stylesheet" href="~/assets/css/theme-shop.css">
    <link href="~/Aassets/vendor/package/dist/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Aassets/css/Spinner.css" rel="stylesheet" />

    <!-- Current Page CSS -->
    <link rel="stylesheet" href="~/assets/vendor/rs-plugin/css/settings.css">
    <link rel="stylesheet" href="~/assets/vendor/rs-plugin/css/layers.css">
    <link rel="stylesheet" href="~/assets/vendor/rs-plugin/css/navigation.css">

    <!-- Demo CSS -->
    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/assets/css/skins/skin-corporate-10.css">

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/assets/css/custom.css">

    <!-- Head Libs -->
    <script src="~/assets/vendor/modernizr/modernizr.min.js"></script>

</head>
<body style="text-align:@(HttpContext.Current.Request.Cookies["lang"]?.Value == "fa" ? "right" : "center");"
      dir="@(HttpContext.Current.Request.Cookies["lang"]?.Value == "fa" ? "rtl" : "ltr")"
      class="loading-overlay-showing"
      data-plugin-page-transition
      data-loading-overlay
      data-plugin-options="{'hideDelay': 500}">

    <div class="loading-overlay">
        <div class="bounce-loader">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>

    <!-- Modal Text-->
    <div class="modal fade" id="basicModal-text" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="formModalLabel">ویرایش نوشتار سایت</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <form id="editContextForm" class="mb-4" novalidate="novalidate">
                    <div class="modal-body">

                        <div class="form-group row align-items-center">
                            <input type="hidden" id="textElementId" name="elementId"> <!-- Hidden field for ID -->
                            <label class="col-sm-3 text-left text-sm-right mb-0">نوشتار فارسی:</label>
                            <div class="col-sm-9">
                                <input type="text" dir="rtl" name="faTxt" class="form-control" placeholder="نام المنت را به فارسی وارد کنید ..." required>
                            </div>
                            <label class="col-sm-3 text-left text-sm-right mb-0">نوشتار انگلیسی:</label>
                            <div class="col-sm-9">
                                <input type="text" dir="ltr" name="enTxt" class="form-control" placeholder="نام المنت را به انگلیسی وارد کنید ..." required>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-dismiss="modal">بستن</button>
                        <button type="submit" id="editSiteContext" class="btn btn-primary">ذخیره تغییرات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- End Modal Text-->
    <!-- Modal Image-->
    <div class="modal fade" id="basicModal-img" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="formModalLabel">عنوان</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <form id="ChangeImage" class="mb-4" novalidate="novalidate">
                    <div class="modal-body">
                        <div class="form-group row align-items-center">
                            <input type="hidden" id="imageElementId" name="elementId"> <!-- Hidden field for ID -->
                            <label class="col-sm-3 text-left text-sm-right mb-0">عکس : </label>
                            <div class="col-sm-9">
                                <input type="file" name="image" class="form-control" required accept="\image">
                            </div>
                            <hr />
                            <br />
                            <label class="col-sm-3 text-left text-sm-right mb-0">متن جایگزین:</label>
                            <div class="col-sm-9">
                                <input type="text" name="imageAlt" class="form-control" placeholder="متن جایگزین عکس را وارد کنید ..." required>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-dismiss="modal">بستن</button>
                        <button type="submit" class="btn btn-primary">بارگذاری</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- End Modal Image-->

    @{
        Html.RenderAction("_header", "Component");
    }

    @RenderBody()

    @{
        Html.RenderAction("_footer", "Component");


    }
    <!-- ~/assets/vendor -->
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/Aassets/js/Spinner.js"></script>
    <script src="~/assets/vendor/jquery.appear/jquery.appear.min.js"></script>
    <script src="~/assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/assets/vendor/jquery.cookie/jquery.cookie.min.js"></script>
    <script src="~/assets/vendor/popper/umd/popper.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/vendor/common/common.min.js"></script>
    <script src="~/assets/vendor/jquery.validation/jquery.validate.min.js"></script>
    <script src="~/assets/vendor/jquery.easy-pie-chart/jquery.easypiechart.min.js"></script>
    <script src="~/assets/vendor/jquery.gmap/jquery.gmap.min.js"></script>
    <script src="~/assets/vendor/jquery.lazyload/jquery.lazyload.min.js"></script>
    <script src="~/assets/vendor/isotope/jquery.isotope.min.js"></script>
    <script src="~/assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/assets/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/assets/vendor/vide/jquery.vide.min.js"></script>
    <script src="~/assets/vendor/vivus/vivus.min.js"></script>
    @{
        if (Session["Edit"] != null && (bool)Session["Edit"])
        {
            <script src="~/assets/js/EditButton.js"></script>
        }
    }
    <!-- Theme Base, Components and Settings -->
    <script src="~/assets/js/theme.js"></script>

    <!-- Current Page ~/assets/vendor and Views -->
    <script src="~/assets/vendor/rs-plugin/js/jquery.themepunch.tools.min.js"></script>
    <script src="~/assets/vendor/rs-plugin/js/jquery.themepunch.revolution.min.js"></script>

    <!-- Current Page ~/assets/vendor and Views -->
    <script src="~/assets/js/views/view.contact.js"></script>

    <!-- Theme Custom -->
    <script src="~/assets/js/custom.js"></script>
    <script src="~/Aassets/vendor/package/dist/sweetalert2.min.js"></script>
    <!-- Theme Initialization Files -->
    <script src="~/assets/js/theme.init.js"></script>
    @RenderSection("HomeScripts", required: false)
</body>
</html>