
@{
    Layout = null;
}

<div class="container container-xl py-4">
    <div class="row py-lg-5 my-5">
        <div class="col-lg-7 pr-lg-5 mb-5 mb-lg-0">
            <h2 class="font-weight-bold mb-4 editable" id="text-10">@ViewBag.maintitle</h2>
            <p class="text-color-dark text-6 line-height-9 editable" id="text-11">@ViewBag.mainparag</p>


        </div>
        <div class="col-md-10 col-lg-5">
            <div class="row">
                <div class="col-6 mb-4">
                    <div class="appear-animation" data-appear-animation="fadeInUp" data-appear-animation-delay="200">
                        <span class="d-inline-block font-weight-extra-bold text-color-primary line-height-1 text-14 ls-0 mb-2">1</span>
                        <h4 class="font-weight-bold text-5 pl-1 mb-2 editable" id="text-12">@ViewBag.t1</h4>
                    </div>
                </div>
                <div class="col-6 mb-4">
                    <div class="appear-animation" data-appear-animation="fadeInUp" data-appear-animation-delay="600">
                        <span class="d-inline-block font-weight-extra-bold text-color-primary line-height-1 text-14 ls-0 mb-2">2</span>
                        <h4 class="font-weight-bold text-5 pl-1 mb-2 editable" id="text-13">@ViewBag.t2</h4>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6 mb-4 mb-sm-0">
                    <div class="appear-animation" data-appear-animation="fadeInUp" data-appear-animation-delay="1000">
                        <span class="d-inline-block font-weight-extra-bold text-color-primary line-height-1 text-14 ls-0 mb-2">3</span>
                        <h4 class="font-weight-bold text-5 pl-1 mb-2 editable" id="text-14">@ViewBag.t3</h4>
                    </div>
                </div>
                <div class="col-6">
                    <div class="appear-animation" data-appear-animation="fadeInUp" data-appear-animation-delay="1400">
                        <span class="d-inline-block font-weight-extra-bold text-color-primary line-height-1 text-14 ls-0 mb-2">4</span>
                        <h4 class="font-weight-bold text-5 pl-1 mb-2 editable" id="text-15">@ViewBag.t4</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>