
@{
    Layout = null;
}
<div class="slider-container" style="height: 100vh; position: relative;">
    <img src="~/assets/img/gallery/@ViewBag.image"
         alt="@ViewBag.bannerAlt"
         id="img-2"
         class="editable"
         style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;
         filter: grayscale(50%) brightness(100%); opacity: 0.5; z-index: 0;">

    <div style="position: absolute; top: 20%; left: 50%; transform: translateX(-50%); text-align: center; color: white;">
        <h1 id="text-7" class="display-1 font-weight-bold mb-4 px-4 py-3 shadow-lg editable" 
            style="border-radius: 20px; background: rgba(0, 0, 0, 0.5);color: white;">
            @ViewBag.sitename
        </h1>
        <p class="title text-lg-6 text-white editable" id="text-8">@ViewBag.bannerTitle</p>
        <div class="text-center mt-5">
            <a href="/Home/Projects" id="text-9" class="btn btn-primary btn-lg px-5 py-3 font-weight-bold shadow-lg editable" style="font-size: 1.5rem; border-radius: 50px;z-index:2;">
                @ViewBag.buttonCaption <i class="fas fa-arrow-left ml-1"></i>
            </a>
        </div>
    </div>
</div>