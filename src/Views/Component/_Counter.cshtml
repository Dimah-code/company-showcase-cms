
@{
    Layout = null;
}
<section class="section section-primary border-0 mb-0 appear-animation" data-appear-animation="fadeIn" data-plugin-options="{'accY': -150}">
    <div class="container">
        <div class="row counters counters-sm pb-4 pt-3 justify-content-center">
            <div class="col-sm-6 col-lg-4 mb-5 mb-lg-0">
                <div class="counter">
                    <i class="icon-book-open icons text-color-light"></i>
                    <strong class="text-color-light font-weight-extra-bold" data-to="@ViewBag.blogs">0</strong>
                    <label class="text-4 mt-1 text-color-light editable" id="text-37">@ViewBag.blog</label>
                </div>
            </div>
            <div class="col-sm-6 col-lg-4 mb-5 mb-lg-0">
                <div class="counter">
                    <i class="icon-puzzle icons text-color-light"></i>
                    <strong class="text-color-light font-weight-extra-bold" data-to="@ViewBag.projects" data-append="+">0</strong>
                    <label class="text-4 mt-1 text-color-light editable" id="text-38">@ViewBag.project</label>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4 mb-5 mb-sm-0">
                <div class="counter">
                    <i class="icons icon-people text-color-light"></i>
                    <strong class="text-color-light font-weight-extra-bold" data-to="@ViewBag.members">0</strong>
                    <label class="text-4 mt-1 text-color-light editable" id="text-39">@ViewBag.team</label>
                </div>  
            </div>
        </div>
    </div>
</section>
