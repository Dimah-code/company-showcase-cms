
@{
    Layout = null;
    var lang = ViewBag.lang;
    var texts = PortoWeb.Models.LanguageTexts.Texts[lang];
}
<footer id="footer" class="bg-color-light border-0 pt-5 mt-0">
    <div class="container pb-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-6">
                <h2 class="font-weight-normal text-color-dark text-center text-8 mb-4">
                    <strong class="font-weight-extra-bold">@texts["Contact us"]</strong>
                </h2>
                <form id="MessageToAdminForm" class="contact-form form-style-3" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-6 pr-md-2">
                            <input type="text" value="" data-msg-required="@texts["Please Fill Name"]"
                                   maxlength="99" class="form-control" placeholder="@texts["Name"]" name="userName" id="name" required>
                        </div>
                        <div class="form-group col-md-6 pl-md-2">
                            <input type="text" value="" data-msg-required="@texts["Please Fill Phone Number"]"
                                   maxlength="15" class="form-control text-left" placeholder="@texts["Phone"]" name="userPhone" id="phone" dir="ltr" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            <textarea maxlength="1200" data-msg-required="@texts["Please Fill The Message"]"
                                      rows="4" class="form-control" placeholder="@texts["Message"]" name="userMessage" id="message" required></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col text-center mb-0">
                            <input type="submit" value="@texts["Button Submit"]" class="btn btn-primary font-weight-semibold text-3 px-5 btn-py-2" data-loading-text="@texts["On Loading"]">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</footer>